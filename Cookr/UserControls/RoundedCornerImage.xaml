<UserControl x:Class="Cookr.RoundedCornerImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookr"
             mc:Ignorable="d">
    <Grid x:Name="RoundedCornerImageGrid" Margin="5,0,10,5">
        <Border Margin="5" CornerRadius="10">
            <Border Name="ImageBrushContent" CornerRadius="10,10,10,10">
                <Border.Background>
                    <ImageBrush>
                        <ImageBrush.RelativeTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.05" ScaleY="1.05" />
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Border.Background>
            </Border>
        </Border>
    </Grid>
</UserControl>
