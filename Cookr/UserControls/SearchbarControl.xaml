<UserControl x:Class="Cookr.SearchbarControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:Cookr"
			 Height="40"
			 Width="400"
			 Margin="5">
	<UserControl.Resources>

	</UserControl.Resources>

	<Grid>
		<local:InputField x:Name="InputField" Grid.ColumnSpan="2" Effect="{DynamicResource DropShadow}" />

		<Button x:Name="SearchbarButton"
				Style="{DynamicResource InputFieldButton}"
				Content="{DynamicResource Search-Icon}"
				Click="SearchbarButton_Click">
		</Button>

	</Grid>

</UserControl>
