<UserControl x:Class="Cookr.CategoryTextButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Cookr"
			 Margin="10,10,0,0">
	<UserControl.Resources>
		<SolidColorBrush x:Key="BGNormal" Color="{StaticResource Text-Dark}"></SolidColorBrush>
	</UserControl.Resources>

	<Grid>
		<Border Background="{DynamicResource BGNormal}" CornerRadius="20" Height="40" Effect="{StaticResource DropShadow}">
				
				<TextBlock x:Name="CategoryButtonText" 
						   Margin="15,0,15,0" 
						   VerticalAlignment="Center" 
						   Text="Category" 
						   Foreground="{StaticResource Text-Light-Brush}" />

		</Border>
		
		<Button Style="{StaticResource EmptyButton}" Click="CategoryButtonClicked" />

	</Grid>
</UserControl>
