<UserControl x:Class="Cookr.FilterControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookr"
             mc:Ignorable="d" 
             d:DesignHeight="235" d:DesignWidth="1315">
	<UserControl.Resources>
	</UserControl.Resources>

	<Grid>

		<Grid HorizontalAlignment="Center">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<local:SortControl x:Name="Sort" />

			<StackPanel Grid.Column="1">

				<local:MinRatingControl x:Name="MinRating" Height="100"/>

				<local:MaxCookTimeControl x:Name="MaxCookTime" Height="100"/>

			</StackPanel>


			<local:ExcludeIngredientControl x:Name="MustExclude" Grid.Column="3" VerticalAlignment="Top" Height="215" />

			<local:MustIncludeIngredientControl x:Name="MustInclude" Grid.Column="2" VerticalAlignment="Top" Height="215" />

		</Grid>

	</Grid>
</UserControl>
