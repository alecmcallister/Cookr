<UserControl x:Class="Cookr.CircularIconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Cookr"
			 Height="40"
			 Width="40"
			 Margin="10">
	<UserControl.Resources>
		<SolidColorBrush x:Key="BGNormal" Color="{DynamicResource Primary}"/>
	</UserControl.Resources>
	
	<Border x:Name="theBG" CornerRadius="20" Background="{DynamicResource BGNormal}" Effect="{StaticResource DropShadow}">
		<Button x:Name="theButton" Style="{StaticResource IconButton}" Content="{StaticResource Add-Icon}" Foreground="{StaticResource Text-Light-Brush}" FontSize="{StaticResource Icon-Large}" />
	</Border>

</UserControl>
