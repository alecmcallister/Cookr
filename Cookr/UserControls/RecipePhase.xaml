<UserControl x:Class="Cookr.RecipePhase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Cookr"
			 Height="40"
			 Margin="5">
    <Border HorizontalAlignment="Stretch" Background="{DynamicResource Primary-Brush}" CornerRadius="20" Effect="{StaticResource DropShadow}">
        <TextBlock x:Name="PhaseTitle" HorizontalAlignment="Center"  Margin="0,0,0,0" Padding="10,10,10,10" TextWrapping="Wrap" Text="Cook!" VerticalAlignment="Center" FontFamily="{StaticResource Roboto}" Foreground="{StaticResource Text-Light-Brush}"/>
    </Border>
</UserControl>
