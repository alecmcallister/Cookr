<Page x:Class="Cookr.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookr"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="Home">
	<Page.Resources>

	</Page.Resources>

	<Grid>
		<Grid Background="{StaticResource BG-Brush}">
			<Grid.RowDefinitions>
				<RowDefinition Height="200"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" Background="{StaticResource Primary-Brush}" Effect="{StaticResource DropShadow-L}" Panel.ZIndex="1">

				<StackPanel>
					<TextBlock 
						FontSize="{StaticResource Text-Title}" 
						Effect="{StaticResource DropShadow}" 
						Foreground="{StaticResource Text-Light-Brush}" 
						HorizontalAlignment="Center" 
						Margin="20" >
						Cook<Run 
							Foreground="{StaticResource Inactive-Light-Brush}">\
						</Run><Run 
							Foreground="{StaticResource Star-Brush}">r
						</Run>
					</TextBlock>
					
					<!-- Searchbar thing -->
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<local:SearchbarControl x:Name="Searchbar" Grid.Column="1" />
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
							<local:HomeButton HorizontalAlignment="Right"/>
							<local:BackButton HorizontalAlignment="Right"/>

						</StackPanel>
					</Grid>

				</StackPanel>

			</Grid>

			<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">

				<StackPanel Orientation="Vertical">

					<StackPanel Height="60" Orientation="Horizontal" Background="{StaticResource BG-Dark-Brush}">
						<Border CornerRadius="20" Background="{StaticResource Primary-Dark-Brush}" Height="40" Width="Auto" Margin="15,0,0,0" Padding="15,0" Effect="{StaticResource DropShadow}">
							<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Category" Foreground="{StaticResource Text-Light-Brush}" FontSize="{StaticResource Text-Small}"/>
						</Border>
					</StackPanel>

					<Grid x:Name="AllCategoriesExpandablePanel" Background="{StaticResource BG-Dark-Brush}" Height="0">

					</Grid>

					<local:ToggleButtonControl x:Name="ExpandCategoriesButton" />

					<WrapPanel x:Name="PopularTodayStack" 
					   Orientation="Horizontal"
					   VerticalAlignment="Top"
					   Margin="10">
						<local:RecipeCard />
					</WrapPanel>

				</StackPanel>

			</ScrollViewer>
		</Grid>


	</Grid>
</Page>
