        <Button x:Name="BtnSearch" Content="Search" HorizontalAlignment="Left" Margin="435,82,0,0" VerticalAlignment="Top" Width="75" Click="BtnSearch_Click"/>
        <StackPanel Name="PopularTodayStack" Orientation="Vertical" HorizontalAlignment="Left" Background="AntiqueWhite" Height="467" Margin="51,192,0,0" VerticalAlignment="Top" Width="161"
          >
        </StackPanel>
        <Label Content="Popular Today" HorizontalAlignment="Left" Margin="51,160,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
