<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookr"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="Cookr.Home"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="Home">

	<Grid>
		<Grid Background="{StaticResource BG-Brush}">

			<ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">

				<StackPanel Orientation="Vertical">

					<StackPanel Height="60" Orientation="Horizontal" Background="{StaticResource BG-Dark-Brush}">
						<Border CornerRadius="20" Background="{StaticResource Primary-Dark-Brush}" Height="40" Width="Auto" Margin="15,0,0,0" Padding="15,0" Effect="{StaticResource DropShadow}">
							<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="TODO: Change to a picture" Foreground="{StaticResource Text-Light-Brush}" FontSize="{StaticResource Text-Small}"/>
						</Border>
					</StackPanel>

					<Grid x:Name="AllCategoriesExpandablePanel" Background="{StaticResource BG-Dark-Brush}" Height="0"/>

					<local:ToggleButtonControl x:Name="ExpandCategoriesButton" Margin="0,-20,0,0" />


					<!-- FIX THE DELAYED CARD RAISE -->
					
					<Grid HorizontalAlignment="Center">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>



						<StackPanel Margin="30,5,0,5" Orientation="Horizontal" HorizontalAlignment="Left">

							<!-- What we <3 -->

							<TextBlock 
								FontSize="{StaticResource Text-Large}" 
								Foreground="{StaticResource Text-Dark-Brush}" 
								Effect="{StaticResource DropShadow}"
								FontFamily="{StaticResource RobotoLight}">Recipes we</TextBlock>

							<TextBlock 
								FontSize="{StaticResource Icon-Regular}"
								Foreground="{StaticResource Text-Dark-Brush}"
								Effect="{StaticResource DropShadow}"
								FontFamily="{StaticResource MaterialIcon}"
								Text="{StaticResource Heart-Full-Icon}"
								Margin="7,2,0,0"/>

						</StackPanel>
						<WrapPanel x:Name="PopularTodayStack"
							   Orientation="Horizontal"
							   VerticalAlignment="Top"					   
							   Margin="10"
							   HorizontalAlignment="Center"
							   Grid.Row="1">

							<i:Interaction.Behaviors>
								<ei:FluidMoveBehavior AppliesTo="Children" Duration="0:0:0.4">
									<ei:FluidMoveBehavior.EaseY>
										<CubicEase EasingMode="EaseInOut"/>
									</ei:FluidMoveBehavior.EaseY>
									<ei:FluidMoveBehavior.EaseX>
										<CubicEase EasingMode="EaseInOut"/>
									</ei:FluidMoveBehavior.EaseX>
								</ei:FluidMoveBehavior>
							</i:Interaction.Behaviors>
							
							<local:RecipeCard />

						</WrapPanel>
					</Grid>

				</StackPanel>

			</ScrollViewer>
		</Grid>


	</Grid>
</Page>
