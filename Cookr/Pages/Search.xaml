<Page x:Class="Cookr.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cookr"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1315"
      Title="Search">

	<Page.Resources>

	</Page.Resources>

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="110"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>


		<Grid Grid.Row="0" Background="{StaticResource Primary-Dark-Brush}" Effect="{StaticResource DropShadow}" Panel.ZIndex="1">
			<TextBlock 
				x:Name="SearchResultText"
				FontSize="{StaticResource Text-Title}" 
				Foreground="{StaticResource Text-Light-Brush}" 
				FontFamily="{StaticResource RobotoLight}"
				Margin="5" 
				Text='" Search result "'
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Effect="{StaticResource DropShadow}"/>
		</Grid>

		<Grid Grid.Row="1" Background="{StaticResource BG-Brush}">
			<StackPanel Orientation="Vertical">
				<Grid x:Name="ExpandableGrid" Height="250" 
					  Background="{StaticResource BG-Darker-Brush}">

					<local:FilterControlPanel x:Name="FilterControl" />

					<!-- Put filter stuff in here -->
					<Grid Margin="200">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>
						
						<TextBlock Text="Sort by:" />
						<TextBlock Grid.Column="1" Text="Min. Rating:" />
						<TextBlock Grid.Column="2" Grid.ColumnSpan="4" Text="Max. Cook time:" />
						<TextBlock Grid.Column="6" Grid.ColumnSpan="2" Text="Include Ingredients:" />
						<TextBlock Grid.Column="8" Grid.ColumnSpan="2" Text="Exclude Ingredients:" />
						<ComboBox Grid.Row="1" x:Name="comboBoxSortBy" SelectedIndex="0" SelectedValuePath="Content">
							<ComboBoxItem>Rating</ComboBoxItem>
							<ComboBoxItem>Cook Time</ComboBoxItem>
							<ComboBoxItem>Relevance</ComboBoxItem>
						</ComboBox>
						<ComboBox Grid.Row="1" Grid.Column="1" x:Name="comboBoxMinRating" SelectedIndex="0">
							<ComboBoxItem>1</ComboBoxItem>
							<ComboBoxItem>2</ComboBoxItem>
							<ComboBoxItem>3</ComboBoxItem>
							<ComboBoxItem>4</ComboBoxItem>
							<ComboBoxItem>5</ComboBoxItem>
						</ComboBox>
						<TextBox x:Name="textBoxMaxCookHours" Grid.Row="1" Grid.Column="2"/>
						<TextBlock Grid.Row="1" Grid.Column="3" Text="h"/>
						<TextBox x:Name="textBoxMaxCookMinutes" Grid.Row="1" Grid.Column="4"/>
						<TextBlock Grid.Row="1" Grid.Column="5" Text="m"/>
						<TextBox x:Name="textBoxIncludeIngredient" Grid.Row="1" Grid.Column="6"/>
						<Button x:Name="buttonIncludeIngredient" Grid.Row="1" Grid.Column="7" Content="+"/>
						<TextBox x:Name="textBoxExcludeIngredient" Grid.Row="1" Grid.Column="8"/>
						<Button x:Name="buttonExcludeIngredient" Grid.Row="1" Grid.Column="9" Content="+"/>
						<ListBox x:Name="listBoxIncludeIngredients" Grid.Row="2" Grid.Column="6" Grid.ColumnSpan="2"/>
						<ListBox x:Name="listBoxExcludeIngredients" Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="2"/>
					</Grid>




				</Grid>
				<local:FilterExpandButton x:Name="ExpandButton"/>
				<!-- Also put a clear filter button here (only enabled if a filter is present -->

				<!-- List stuff here -->
				<WrapPanel x:Name="SearchResultsStack" Orientation="Horizontal" />


			</StackPanel>
		</Grid>



	</Grid>
</Page>
